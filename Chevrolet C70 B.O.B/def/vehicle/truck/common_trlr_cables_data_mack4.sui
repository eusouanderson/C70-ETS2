# Common truck sounds data.
# Units have to be defined with same names as in "common_trlr_cables_data_mack4.sui".

trailer_cable_data : .air_cable_y
{
	locator_prefix: air_cable_y
	rest_locator_prefix: rst_cable_y

	vehicle_plug_model: "/vehicle/share/models/cables_connectors/air_socket_y.pmd"
	vehicle_plug_model_offset: (0.0, 0.0, -0.11)
	trailer_plug_model: "/vehicle/share/models/cables_connectors/air_plug_y.pmd"
	trailer_plug_model_offset: (-0.0205, 0.0, -0.121)

	color: (0.0, 0.0, 0.1)

     straight_cable_length: 1.0
}

